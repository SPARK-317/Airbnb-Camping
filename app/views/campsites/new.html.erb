
  <div class="container d-flex justify-content-center" id="add-camp-container" >
    <div class="col-6">
    <%= simple_form_for(@campsite) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %> 
      <%= f.input :price_per_night %>
      <%= f.input :capacity %>
      <%= f.input :photo, as: :file %>
      <div class="container d-flex justify-content-center">
      <%= f.submit %>
      </div> 
    <% end %>
  </div>
</div>
