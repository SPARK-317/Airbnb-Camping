<%= @campsite.name %>
<%= @campsite.address %>
<%= @campsite.description %>
<%= @campsite.price_per_night %>
<%= @campsite.capacity %>

<h1>book <%=@campsite.name%> </h1>
<%= simple_form_for [@campsite, @booking] do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :number_of_guest, as: :numeric %>
  <%= f.submit %>
<% end %>

