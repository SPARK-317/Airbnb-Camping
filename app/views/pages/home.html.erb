<div class="banner">
  <div class="container d-flex justify-content-center my-5 pt-5">
   
   <div class="home-search-bar">
      <form action="/campsites" accept-charset="UTF-8" method="get" class="d-flex justify-content-center align-items-stretch">
        <input type="text" name="location" id="location" class="left" placeholder="Where are you camping?" required>
        <input type="date" name="start" id="start" class="form-control date-input input-border" placeholder="Start date" required>
        <input type="date" name="end" id="end" class="form-control date-input input-border" placeholder="End date" required>
        <input type="number" min="0" name="guest" id="guest" class="form-control input-border guest" placeholder="Guests" required>
        <input type="submit" name="commit" value="Search" id="search-button" class="btn btn-secondary" data-disable-with="Search">
     </form>
   </div>  
  </div>
</div>










