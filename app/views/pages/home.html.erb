<div class="banner">
  <div id="home-nav" class="d-flex justify-content-between">
    <h1>CAMPING AIRBNB</h1>
    <% if user_signed_in? %>
      <h2 id="user-welcome">Welcome <%= current_user.email %><h2>
    <% else %>
      <h2>Register/Login</h2>
    <% end %>
  </div>
  <div class="container d-flex justify-content-center my-4">
    <div class="row">
      <form>
        <div class="form-row align-items-center d-flex justify-content-center">
          <div class="col-sm-3 my-1">
            <label class="sr-only" for="inlineFormWhereTo">Where To</label>
            <input type="text" class="form-control" id="inlineFormWhereTo" placeholder="Where to?" required>
          </div>
          <div class="col-sm-3 my-1">
            <label class="sr-only" for="inlineFormInputGroupFrom">From</label>
            <div class="input-group">
              <input type="date" class="form-control" id="inlineFormInputGroupFrom" placeholder="From:" required>
            </div>
          </div>
          <div class="col-sm-3 my-1">
            <label class="sr-only" for="inlineFormInputGroupTo">To</label>
            <div class="input-group">
              <input type="date" class="form-control" id="inlineFormInputGroupTo" placeholder="To:" required>
            </div>
          </div>
          <div class="col-sm-2 my-1">
            <label class="sr-only" for="inlineFormInputGroupGuests">Guests</label>
            <div class="input-group">
              <input type="number" class="form-control" id="inlineFormInputGroupGuests" placeholder="Guests" required>
            </div>
          </div>
          <div class="col-sm-1 my-1">
            <button type="submit" class="btn btn-white"><a href="/campsites"><i class="fas fa-search"></i></a></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
